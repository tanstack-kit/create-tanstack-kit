{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./bin",
    "declaration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "sourceMap": true,

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@tmp/*": ["./template/*"]
    }
  },
  "include": ["src"]
}
